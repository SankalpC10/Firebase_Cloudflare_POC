{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "https://www.alphantech.fyi/"
      },
      {
        "source": "/posts/**",
        "destination": "https://www.alphantech.fyi/posts/**"
      },
      {
        "source": "/about/**",
        "destination": "https://www.alphantech.fyi/about/**"
      },
      {
        "source": "/home",
        "destination": "https://www.alphantech.fyi/home/**"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}